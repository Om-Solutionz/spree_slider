<% if slider.size > 0 %>
  <%# cid ||= Random.rand(1000) %>
  <div class="homepage-hero-image position-relative">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <!-- <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol> -->
      <div class="carousel-inner">
        <% slider.each_with_index do |slide, index| %>
          <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
            <%= link_to image_tag(main_app.url_for(slide.image), alt: slide.slide_name, class: 'd-block w-100'), url_for(slide.slide_link) %>
          </div>
          <div class="hero-content alpha-hero-content">
            <div class="homepage-hero-image-text mb-2">
              <%= slide.name %>
            </div>
            <div class="homepage-hero-image-text mb-2 pb-3 pb-md-4">
              <%= slide.body %>
            </div>
            <% if index == 0  %>
              <div class="text-left">
                <%= link_to Spree.t('homepage.shop_now'), spree.products_path, class: 'btn btn-primary alpha-shop-btn px-4' %>
              </div>
            <% end  %>
          </div>
        <% end  %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <i class="fa fa-chevron-left alpha-left-arrow" aria-hidden="true"></i>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <i class="fa fa-chevron-right alpha-right-arrow" aria-hidden="true"></i>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
<% end %>