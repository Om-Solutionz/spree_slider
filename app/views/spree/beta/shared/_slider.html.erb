<% if slider.size > 0 %>
  <div class="homepage-hero-image mb-3 position-relative">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <!-- <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol> -->
      <div class="carousel-inner">
        <% slider.each_with_index do |slide, index| %>
          <div class="carousel-item <%= index == 0 ? 'active' : '' %>"">
            <%= image_tag "beta/main_banner.jpg",class: "d-block w-100", alt: "First slide" %>
            <div class="hero-content beta-hero-content">
              <div class="beta-hero-image-text">
                <span class="beta-hero-spam"><%= slide.name %></span>
              </div>
              <div class="beta-hero-image-text-bottom mb-2">
                <%= slide.body %>
              </div>
              <% if index == 0  %>
                <div class="text-left">
                  <%= link_to Spree.t('homepage.shop_now'), spree.products_path, class: 'btn btn-primary beta-shop-btn px-4' %>
                </div>
              <% end %>
            </div>
          </div>
        <% end  %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <i class="fa fa-chevron-left beta-left-arrow" aria-hidden="true"></i>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <i class="fa fa-chevron-right beta-right-arrow" aria-hidden="true"></i>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
<% end %>